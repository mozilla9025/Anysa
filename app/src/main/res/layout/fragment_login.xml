<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp160"
        android:background="@color/transparent"
        android:elevation="@dimen/dp0"
        android:theme="@style/Widget.Design.AppBarLayout"
        app:elevation="@dimen/dp0">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="center"
            app:collapsedTitleTextAppearance="@style/AppTheme.RegistrationTitleAppearance"
            app:contentScrim="@color/transparent"
            app:expandedTitleGravity="center|bottom"
            app:expandedTitleMarginBottom="@dimen/dp38"
            app:expandedTitleTextAppearance="@style/AppTheme.RegistrationTitleAppearance"
            app:title="@string/login_fragment_title_welcome_back"
            app:titleEnabled="true">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp88"
                android:background="@color/transparent"
                android:contentInsetStart="0dp"
                android:elevation="@dimen/dp0"
                android:paddingStart="@dimen/dp60"
                android:paddingEnd="@dimen/dp16"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_back"
                android:layout_width="@dimen/dp28"
                android:layout_height="@dimen/dp28"
                android:layout_marginStart="@dimen/dp34"
                android:layout_marginTop="@dimen/dp30"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/dp4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrowback"
                android:tint="@color/textColor"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_anchorGravity="top|start"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <app.anysa.ui.widget.RegisterFormInputView
                android:id="@+id/rfiv_phone"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp58"
                android:layout_marginEnd="@dimen/dp58"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rfiv_hint="+86 000 000 0000"
                app:rfiv_title="@string/login_fragment_label_phone_number"
                app:rfiv_type="phone" />

            <app.anysa.ui.widget.RegisterFormInputView
                android:id="@+id/rfiv_password"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp58"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp58"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rfiv_phone"
                app:rfiv_hint="@string/login_fragment_hint_enter_password"
                app:rfiv_title="@string/login_fragment_label_password"
                app:rfiv_type="password" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_in"
                style="@style/AppTheme.GradientedLoginButton"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp86"
                android:layout_marginTop="@dimen/dp32"
                android:layout_marginEnd="@dimen/dp86"
                android:layout_marginBottom="@dimen/dp30"
                android:text="@string/login_fragment_button_sing_in"
                app:layout_constraintBottom_toTopOf="@id/cl_footer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rfiv_password"
                app:layout_constraintVertical_bias="0" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_footer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_new_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:text="@string/login_fragment_label_new_to_anysa"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/sp14"
                    app:fontFamily="@font/helvetica_neue_medium"
                    app:layout_constraintBottom_toTopOf="@id/view_language_select"
                    app:layout_constraintEnd_toStartOf="@id/tv_sign_up"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp2"
                    android:text="@string/login_fragment_label_new_to_anysa_sign_up"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/sp16"
                    app:fontFamily="@font/helvetica_neue_medium"
                    app:layout_constraintBottom_toBottomOf="@id/tv_new_account"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_new_account"
                    app:layout_constraintTop_toTopOf="@id/tv_new_account" />

                <View
                    android:layout_width="@dimen/dp0"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/textColor"
                    app:layout_constraintEnd_toEndOf="@id/tv_sign_up"
                    app:layout_constraintStart_toStartOf="@id/tv_sign_up"
                    app:layout_constraintTop_toBottomOf="@id/tv_sign_up" />

                <app.anysa.ui.widget.LanguageSelectionView
                    android:id="@+id/view_language_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/helvetica_neue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>