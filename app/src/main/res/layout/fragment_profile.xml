<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="app.anysa.domain.pojo.CurrentUser" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_loading_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_loading_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_neue_medium"
                    android:maxLines="1"
                    android:text="@string/profile_fragment_profile_loading_error"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/sp16" />

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp12"
                    android:text="@string/fragment_profile_logout" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dp170"
                    android:layout_height="@dimen/dp170"
                    android:layout_marginTop="@dimen/dp12"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{user}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@color/colorDividers" />

                <app.anysa.ui.widget.QuarterCircleView
                    android:layout_width="@dimen/dp0"
                    android:layout_height="@dimen/dp0"
                    app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                    app:layout_constraintEnd_toEndOf="@id/iv_avatar"
                    app:layout_constraintStart_toStartOf="@id/iv_avatar"
                    app:layout_constraintTop_toTopOf="@id/iv_avatar" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_edit_photo"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/profile_fragment_edit_photo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12"
                    app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                    app:layout_constraintEnd_toEndOf="@id/iv_avatar"
                    app:layout_constraintStart_toStartOf="@id/iv_avatar" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ib_qr"
                    android:layout_width="@dimen/dp24"
                    android:layout_height="@dimen/dp24"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_marginEnd="@dimen/dp20"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_qr"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginEnd="@dimen/dp20"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_neue_bold"
                    android:maxLines="1"
                    android:text="@{user.nickname}"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/sp24"
                    app:layout_constraintEnd_toStartOf="@id/ib_generate_qr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_avatar"
                    tools:text="Annd asdff fasdf" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ib_generate_qr"
                    android:layout_width="@dimen/dp24"
                    android:layout_height="@dimen/dp24"
                    android:layout_marginEnd="@dimen/dp20"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_generate_qr"
                    app:layout_constraintBottom_toBottomOf="@id/tv_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_name" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_phone"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginEnd="@dimen/dp20"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:maxLines="1"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/sp16"
                    app:layout_constraintEnd_toStartOf="@id/ib_generate_qr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    app:phone_number="@{user.phone}"
                    tools:text="+380944444444" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_edit_profile"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintBottom_toTopOf="@id/divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_phone"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintVertical_chainStyle="packed">


                    <ImageView
                        android:id="@+id/ib_edit_profile"
                        style="@style/SettingsItemIcon"
                        android:src="@drawable/ic_qr"
                        app:layout_constraintBottom_toBottomOf="@id/tv_edit_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_edit_profile" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_edit_profile"
                        style="@style/SettingsLabelTextView"
                        android:text="@string/fragment_profile_edit_profile"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ib_edit_profile"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider"
                    style="@style/SettingsDivider"
                    app:layout_constraintBottom_toTopOf="@id/cl_my_applications"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_edit_profile" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_my_applications"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintBottom_toTopOf="@id/divider1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider">

                    <ImageView
                        android:id="@+id/ib_my_applications"
                        style="@style/SettingsItemIcon"
                        android:src="@drawable/ic_qr"
                        app:layout_constraintBottom_toBottomOf="@id/tv_my_applications"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_my_applications" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_my_applications"
                        style="@style/SettingsLabelTextView"
                        android:text="@string/fragment_profile_my_applications"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ib_my_applications"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider1"

                    style="@style/SettingsDivider"
                    app:layout_constraintBottom_toTopOf="@id/cl_settings"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_my_applications" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_settings"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintBottom_toTopOf="@id/divider2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider1">

                    <ImageView
                        android:id="@+id/iv_settings"
                        style="@style/SettingsItemIcon"
                        android:src="@drawable/ic_qr"
                        app:layout_constraintBottom_toBottomOf="@id/tv_settings"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_settings" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_settings"
                        style="@style/SettingsLabelTextView"
                        android:text="@string/fragment_profile_settings"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_settings"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider2"
                    style="@style/SettingsDivider"
                    app:layout_constraintBottom_toTopOf="@id/cl_logout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_settings" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_logout"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintBottom_toTopOf="@id/divider3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider2">

                    <ImageView
                        android:id="@+id/iv_logout"
                        style="@style/SettingsItemIcon"
                        android:src="@drawable/ic_qr"
                        app:layout_constraintBottom_toBottomOf="@id/tv_logout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_logout" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_logout"
                        style="@style/SettingsLabelTextView"
                        android:text="@string/fragment_profile_logout"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_logout"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider3"
                    style="@style/SettingsDivider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_logout" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>