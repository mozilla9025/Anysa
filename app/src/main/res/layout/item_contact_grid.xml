<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="user"
            type="app.anysa.domain.pojo.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_avatar"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp6"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp6"
            android:background="?attr/selectableItemBackground"
            android:elevation="@dimen/dp0"
            app:cardCornerRadius="@dimen/dp10"
            app:cardElevation="@dimen/dp0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="156:108"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:imageUrl="@{user}"
                tools:src="@color/white" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            android:background="@drawable/shape_gradient"
            app:layout_constraintBottom_toBottomOf="@id/cv_avatar"
            app:layout_constraintEnd_toEndOf="@id/cv_avatar"
            app:layout_constraintStart_toStartOf="@id/cv_avatar"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp4"
            android:layout_marginEnd="@dimen/dp4"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_neue_medium"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="@dimen/dp10"
            android:text="@{user.username}"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            app:layout_constraintBottom_toTopOf="@id/tv_last_seen"
            app:layout_constraintEnd_toEndOf="@id/cv_avatar"
            app:layout_constraintStart_toStartOf="@id/cv_avatar"
            app:layout_constraintTop_toTopOf="@id/cv_avatar"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Annd asdff fasdf" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_last_seen"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp4"
            android:layout_marginTop="@dimen/dp1"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp6"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_neue_light"
            android:gravity="center"
            android:maxLines="1"
            android:text="13 minutes ago"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            app:layout_constraintBottom_toBottomOf="@id/cv_avatar"
            app:layout_constraintEnd_toEndOf="@id/cv_avatar"
            app:layout_constraintStart_toStartOf="@id/cv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="13 minutes ago" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
