<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_contacts"
    app:startDestination="@id/contactsFragment">

    <action
        android:id="@+id/action_global_contactsFragment"
        app:destination="@id/contactsFragment" />

    <fragment
        android:id="@+id/contactsFragment"
        android:name="app.anysa.ui.modules.main.contactsnav.contacts.ContactsFragment"
        android:label="ContactsFragment"
        tools:layout="@layout/fragment_contacts">
        <action
            android:id="@+id/action_contactsFragment_to_addContactFragment"
            app:destination="@id/addContactFragment" />
    </fragment>

    <fragment
        android:id="@+id/addContactFragment"
        android:name="app.anysa.ui.modules.main.contactsnav.add_contact.AddContactFragment"
        android:label="AddContactFragment"
        tools:layout="@layout/fragment_add_contact" />
</navigation>