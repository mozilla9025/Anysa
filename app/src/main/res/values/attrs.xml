<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RegisterFormInputView">
        <attr name="rfiv_text" format="string" />
        <attr name="rfiv_hint" format="string" />
        <attr name="rfiv_title" format="string" />
        <attr name="rfiv_type" format="enum">
            <enum name="text" value="0" />
            <enum name="phone" value="1" />
            <enum name="password" value="2" />
            <enum name="email" value="3" />
        </attr>
        <attr name="rfiv_maxLines" format="integer" />
        <attr name="rfiv_isOptional" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="el_duration" format="integer" />
        <attr name="el_expanded" format="boolean" />
        <attr name="el_parallax" format="float" />
        <attr name="android:orientation" />
    </declare-styleable>

    <declare-styleable name="ToolbarView">
        <attr name="tv_action_left_icon" format="reference" />
        <attr name="tv_action_left_tint" format="color" />
        <attr name="tv_action_icon" format="reference" />
        <attr name="tv_action_tint" format="color" />
        <attr name="tv_text" format="string"/>
        <attr name="tv_text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="SearchView">
        <attr name="sv_hint" format="string" />
        <attr name="sv_isPhone" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SettingsEditText">
        <attr name="set_title" format="string" />
        <attr name="set_text" format="string" />
        <attr name="set_hint" format="string" />
        <attr name="set_maxlines" format="integer" />
        <attr name="set_isPassword" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GradientedButton">
        <attr name="gb_text" format="string" />
        <attr name="gb_background" format="reference" />
        <attr name="gb_text_color" format="color"/>
    </declare-styleable>

</resources>